<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.clpstudio.bsocial">

    <application
        android:name=".presentation.BSocialApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.clpstudio.bsocial.core.glide.GlideConfiguration"
            android:value="GlideModule" />


        <activity android:name=".presentation.splashscreen.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".presentation.login.LoginActivity">
        </activity>
        <activity android:name=".presentation.register.RegisterActivity">
        </activity>
        <activity android:name=".presentation.authenticate.AuthenticateActivity"/>
        <activity android:name=".presentation.conversations.ConversationsActivity"/>
        <activity android:name=".presentation.profile.ProfilePageActivity">
        </activity>
    </application>

</manifest>